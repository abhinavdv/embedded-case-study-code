	AREA ODDEVENFUN,	CODE,	READWRITE
ENTRY
	ADR R0,ARRAY1
	MOV R6,#0 ;EVEN
	MOV R7,#1 ;ODD
	MOV R9,#8
LOOP1
	SUB R9,R9,#1
	LDR R1,[R0],#4
	MOV R2,R1
	AND R3,R1,#1
	
	
	CMP R3,#0
	
	
	BNE SKIP1
	ADD R6,R6,R2
SKIP1


	BEQ SKIP2
	MUL R8,R7,R2
	MOV R7,R8
SKIP2



	CMP R9,#0
	BGT LOOP1
	
LOOP	B LOOP
ARRAY1	DCD 1,2,3,4,5,6,7,8
	END
